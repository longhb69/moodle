</script>

<style>
    th {
        position: relative; /* Needed for absolute positioning */
    }

    .full-width-link {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;  /* Center vertically */
        justify-content: center; /* Center horizontally */
        text-decoration: none;
        color: inherit;
        transition: color 0.3s ease;
    }
    .header {
        
    }
    .full-width-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }
    .sort-icon {
        opacity: 0; /* Hide icon by default */
        transition: opacity 0.3s ease, transform 0.3s ease;
        transform: translateY(5px); /* Move icon down slightly */
    }

    .full-width-link:hover .sort-icon {
        opacity: 1; /* Show icon on hover */
        transform: translateY(0); /* Move icon up smoothly */
    }
    .login-header {
        box-sizing: border-box; /* Ensures border doesn't affect width */
    }
    .login-header:hover {
        border-right: 2px solid white !important;
        transition: border-right 0.1s ease;
    }
</style>